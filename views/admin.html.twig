{% extends 'layout.html.twig' %}

{% block content %}
    {% if user is not empty %}
        {% set username = user['pseudo'] %}
        {% set email = user['email'] %}
        {% set city = user['city'] %}
        {% set bottlesNumber = user['bottlesNumber'] %}
        {% set level = user['level'] %}
    {% endif %}
    <p>Ajouter des offres</p>
    <form method="POST" action="?action=admin">
        <input type="text" name="partner" placeholder="Partenaire"><br>
        <input type="text" name="secteur" placeholder="Secteur"><br>
        <input type="text" name="reduction" placeholder="Réduction"><br>
        <input type="text" name="cout" placeholder="Coût"><br>
        <button type="submit" >Ajouter Offre</button>
    </form>
{% endblock %}
