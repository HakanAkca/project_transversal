{% extends 'layout.html.twig' %}

{% block content %}
    <header>
        <div class="left_side_mobile">
            <div class="burger">
                <div class="burger_line"></div>
                <div class="burger_line"></div>
                <div class="burger_line"></div>
            </div>
            <ul class="mobile_dropdown">
                <li><a href="?action=about">Nous</a></li>
                <li><a href="?action=partner">Devenir Partenaires</a></li>
                {% if user.pseudo is defined %}
                    <li><a href="?action=profile">Profil</a></li>
                    <li><a href="?action=logout">Deconnexion</a></li>
                {% else %}
                    <li><a href="?action=register">Inscription</a></li>
                {% endif %}
            </ul>
            <img class="mobile_logo" src="assets/img/mobile_logo.png"/>
        </div>
        <div class="stats">
            <span>{{bottlesRecycled}}</span>
            <p>objets recylés !</p>
        </div>
        <ul class="menu_desktop">
            <li><a href="?action=about">Nous</a></li>
            <li><a href="?action=partner">Devenir Partenaires</a></li>
            {% if user.pseudo is defined %}
                <li><a href="?action=profile">Profil</a></li>
                <li><a href="?action=logout">Deconnexion</a></li>
            {% else %}
                <li><a href="?action=register">Inscription</a></li>
            {% endif %}
        </ul>
        <div class="current"><a href="#">Accueil</a></div>
    </header>

    <main class="home_page">
        <div class="illus_sect">
            {% if user is empty %}
            <p class="bold">Recyclez<br> pour partir a l'aventure !</p>
            <p class="descrip">Venez recycler dans nos super poubelleset faîtes un geste pour l'écologie, mais également pour votre porte-monnaie !</p>
            {% else %}
            <p class="bold">Bonjour {{user.pseudo}} !</p>
            <p class="descrip">Tu as déja recyclé {{user.bottlesNumber}} bouteilles !</p>
            {% endif %}
        </div>
        <div class="concept">
            {% if user is empty %}
                <a class="redirect_link" href="?action=register">Inscrivez vous Dès Maintenant</a>
                <a class="redirect_link open_login_md" href="#">Connectez vous</a>
            {% else %}
                <a class="redirect_link" href="?action=offers">Mes offres </a>
                <a class="redirect_link" href="?action=profile">Mon Profil</a>
            {% endif %}
            <div class="discover_concept">
                <p>Découvrez le concept</p>
                <a href="#tuto"><img src="assets/img/concept_arrow.png"></img></a>
            </div>
            <div id="tuto">
                <div class="info_steps">
                    <img class="step_one" src="assets/img/img_tuto/step_one.png"/>
                    <img class="step_two" src="assets/img/img_tuto/step_two.png"/>
                </div>
                <div class="tuto_area">
                    <img class="bottle" src="assets/img/img_tuto/bottle.png"/>
                    <img class="girl_bottle" src="assets/img/img_tuto/girl_bottle.png"/>
                    <img class="girl_phone" src="assets/img/img_tuto/girl_phone.png"/>
                    <img class="trash" src="assets/img/img_tuto/trash.png"/>
                </div>
            </div>
             <div class="next_2"><p class="how_many_steps">1/3</p><img src="assets/img/img_tuto/next.png"/><p>Cliquez pour avancer </p></div>
        </div>
        <div class="map_area">
            <div class="find_city">
                <p class="title">Trouvez le Tritus le plus proche de chez vous !</p>
                <p class="enter_name">Entre le nom de votre ville pour commencer :</p>
                <form>
                    <input class="city_input" type="text" name="city" placeholder="ex: Paris">
                    <input class="submit_input" type="submit" value="GO !">
                </form>
            </div>
            <div id="map" style="height: 400px; width: 100%"></div>
        </div>
    </main>
    <div class="modale_login">
        <div class="container_form">
            <div class="close_login_md"><img src="assets/img/cancel.png"></img></div>
            <form action="?action=home" method="POST">
                <div class="login_form" ><p>Nom d'utilisateur : </p><input name="username" type="text" value=""></div>
                <div class="login_form" ><p>Mot de passe : </p><input name="password" type="password" value=""></div>
                <input class="login_button" name="submitLogin" type="submit" value="connexion">
            </form>
        </div>
    </div>
    <!--<script src="assets/script/loginCheck.js"></script>-->
{% endblock %}
