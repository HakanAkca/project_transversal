{% extends 'layout.html.twig' %}

{% block content %}
    <header>
        <div class="left_side_mobile">
            <div class="burger">
                <div class="burger_line"></div>
                <div class="burger_line"></div>
                <div class="burger_line"></div>
            </div>
            <ul class="mobile_dropdown">
                <li><a href="?action=home">Accueil</a></li>
                <li><a href="?action=about">Nous</a></li>
                {% if user.pseudo is defined %}
                    <li><a href="?action=profile">Profil</a></li>
                {% else %}
                    <li><a href="?action=register">Inscription</a></li>
                {% endif %}
            </ul>
            <img class="mobile_logo" src="assets/img/mobile_logo.png"/>
        </div>
        <div class="stats">
            <span>{{bottlesRecycled}}</span>
            <p>objets recylés !</p>
        </div>
        <ul class="menu_desktop">
            <li><a href="?action=home">Accueil</a></li>
            <li><a href="?action=about">Nous</a></li>
            {% if user.pseudo is defined %}
                <li><a href="?action=profile">Profil</a></li>
            {% else %}
                <li><a href="?action=register">Inscription</a></li>
            {% endif %}
        </ul>
        <div class="current"><a href="#">Partenaires</a></div>
    </header>

    <main class="allForm">
        <div class="container_form">
            {% if errors is defined and errors is not empty %}
                {% for error in errors %}
                    {{ error }}<br>
                {% endfor %}
            {% endif %}
            {%  if message is defined and message is not empty %}
                Cliquez <a href="?action=home">ici</a> pour se connecter
            {% endif %}
            <h2 class="title">Devenir partenaires</h2>
                <div class="form-container-2 form-container form" id="example-2">

                    <form id="myRegister" method="POST" action="?action=partner">
                        <input id="name" type="text" name="name" placeholder="Name*"><br>
                        <input id="email" type="email" name="email" placeholder="Mail*"><br>
                        <input id="city" type="text" name="city" placeholder="Ville*"><br>
                        <input id="phone" type="text" name="phone" placeholder="Téléphone*"><br>
                        <input id="statut" type="text" name="status" placeholder="Statut*"><br>
                        <button type="submit" id="button">Devenir Partenaire</button>
                    </form>
            </div>
        </div>
    </main>

{% endblock %}
