{% extends 'layout.html.twig' %}
{% block content %}
    <header>
        <div class="left_side_mobile">
            <div class="burger">
                <div class="burger_line"></div>
                <div class="burger_line"></div>
                <div class="burger_line"></div>
            </div>
            <ul class="mobile_dropdown">
                <li><a href="?action=home">Accueil</a></li>
                <li><a href="?action=about">Nous</a></li>
                <li><a href="?action=partner">Devenir Partenaires</a></li>
            </ul>
            <img class="mobile_logo" src="assets/img/mobile_logo.png"/>
        </div>
        <div class="stats">
            <span>{{bottlesRecycled}}</span>
            <p>objets recylés !</p>
        </div>
        <ul class="menu_desktop">
            <li><a href="?action=home">Accueil</a></li>
            <li><a href="?action=about">Nous</a></li>
            <li><a href="?action=partner">Devenir Partenaires</a></li>
        </ul>
        <div class="current"><a href="#">{{user.pseudo}}</a></div>
    </header>

    <main class="user_page">
        <div class="user_info">
            <img class="profil_img" src="http://www.cipb.bj/wp-content/uploads/2017/01/no-profile-img-1024x1024-e1484312573323.gif"></img>
            <div class="line"></div>
            <div class="specific_info">
                <div class="username_lvl">
                    <div class="pseudo"><span>{{user.pseudo}}<span><a href="#"><img class="params" src="assets/img/editProfile.png"></img></a></div>
                    <span>Niv. <span class="lvl">{{user.level}}</span></span>
                </div>
                <div class="classement"><a href="#">Voir le Classement</a></div>
                <div><span class="inscription_date">Inscrit depuis le {{user.date | date("m/d/Y")}}</span></div>
            </div>
        </div>
        <div class="stats">
            <div class="recycled"><span>{{user.bottlesNumber}}</span> objets recylés</div>
            <div class="points"><span>{{user.costs}}</span> points</div>
            <div class="fun_stats">statistiques : 19 bottles/week 4eme</div>
        </div>

        <div class="box">
            <ul>
                <li class="tabs active" id="profile_user_reductions">1</li>
                <li class="tabs" id="profile_availables_reductions">2</li>
                <li class="tabs" id="profile_sondage">3</li>
            </ul>
            <div class="all_changing_contents">
                <div class="changing_content my_reductions">My réductions</div>
                <div class="changing_content available_reductions">Réductions disponibles</div>
                <div class="changing_content sondage">Le sondage du mois</div>
            </div>
        </div>
        <div>
            <h3>Entrez un code</h3>
            <form action="?action=profile" method="POST">
                <input type="text" placeholder="code barre" name="barcode">
                <input type="submit" name="submitBarcode" value="Valider">
            </form>
        </div>
        <hr>
        <div>
            <h3>Notre poubelle</h3>
            <form action="?action=profile" method="POST">
                <input type="text" placeholder="vos bouteilles ici" name="bottlesNumber">
                <input type="submit" name="submitBottles" value="Valider">
            </form>
        </div>
        <hr>
        <div>
            <h3>Mes réductions</h3>
            {% for deal in userDeals %}
                <p>{{ deal['partner'] }} - {{ deal['deal'] | raw }}  - {{ deal['cost'] }} points</p>
            {% endfor %}
        </div>
        <hr>
        <div>
            <h3>Réductions disponibles</h3>
            {% for deal in allDeals %}
                <p>{{ deal['partner'] }} - {{ deal['deal'] | raw }}  - {{ deal['cost'] }} points</p>
            {% endfor %}
        </div>

    </main>
{% endblock %}
